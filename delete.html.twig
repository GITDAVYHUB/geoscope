{% extends 'base.html.twig' %}
{% block body %}
    <h1>Suppression de l'intervention</h1>
    <p>Êtes-vous sûr de vouloir supprimer l'intervention {{ intervention.nomClient }} ?</p>
    <form method="post">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ intervention.id) }}">
        <button type="submit">Oui, supprimer</button>
    </form>
    <a href="{{ path('interventions_index') }}">Non, annuler</a>
{% endblock %}
